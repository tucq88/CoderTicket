<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>

    <!-- Left menu -->
    <ul class="nav navbar-nav">
      <% if !current_user %>
        <li class="nav-item">
          <%= link_to 'Login', 'login', :class => 'nav-link'  %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign Up', 'signup', :class => 'nav-link'  %>
        </li>
      <% end %>
    </ul>

    <!-- Right menu -->
    <ul class="nav navbar-nav nav-right">
      <% if current_user %>
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button">
            <%= current_user.name %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Logout', 'logout', :method => 'delete', :class => 'dropdown-item' %></li>
          </ul>
        </li>
      <% end %>
   </ul>

  </nav>


  <%= flash_messages %>
  <%= yield %>

</body>
</html>
